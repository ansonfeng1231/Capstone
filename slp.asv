function solp = slp(coord1, coord2, dx, z)

    x1 = coord1(1);
    y1 = coord1(2);
    x2 = coord2(1);
    y2 = coord2(2);
    % slope obvs
    if ~anynan([x1,y1,x2,y2])
        % z(x1,y1)
        % z(x2,y2)
        alpha = 100;
        solp = alpha*(z(round(x1),round(y1)) - z(round(x2),round(y2)))/dx;
    else
        solp = 0;
    end
end
    